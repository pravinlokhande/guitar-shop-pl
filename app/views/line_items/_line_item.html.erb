<% guitar = Guitar.find(line_item.guitars_id) %>
<table class="table table-hover table-responsive" id="<%= guitar.uid %>">
  <tr title="Brand Name" data-id="<%= guitar.uid %>" data-price="<%= guitar.price %>">
    <td><strong><%= guitar.brand %></strong>(uid:
        <%= guitar.uid %>)</td>
    <td title="Unit Price">
        <%= guitar.price %>
    </td>
    <td title="Quantity">
        <input type="number" min="1" style="width: 70px;" class="' + classProductQuantity + '" value="<%= line_item.quantity %>" />
    </td>
    <td title="Total" class="' + classProductTotal + '">
        <%= number_to_currency(line_item.total_price) %>
    </td>
    <td title="Remove from Cart" class="text-center" style="width: 30px;">
        <%= link_to 'X', line_item, method: :delete, data: { confirm: "Are you sure? " }, class: "btn btn-xs btn-danger" %>
    </td>
  </tr>
</table>