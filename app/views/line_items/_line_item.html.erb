<% guitar = Guitar.find(line_item.guitars_id) %>
<table class="table table-hover table-responsive col-md-12" id="<%= guitar.uid %>">
  <tr class="col-md-12">
    <td class="col-md-4 text-left" title="Product ID">
        <%= guitar.uid %>
    </td>
    <td class="col-md-4" title="Brand Name">
      <strong><%= guitar.brand %></strong>
    </td>
    <td class="col-md-4" title="Model Name">
      <strong><%= guitar.model %></strong>
    </td>
    <td title="Quantity" class="col-md-4">
      <%= line_item.quantity %>
    </td>
    <td title="Total" class="col-md-4">
      <%= number_to_currency(line_item.total_price, :unit=> "Rs.") %>
    </td>
